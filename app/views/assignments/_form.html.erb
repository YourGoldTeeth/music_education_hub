<%= form_with(model: assignment, local: true) do |form| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <div class="well">
      <div class="field form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :assignment_title %>
      </div>

      <div class="field form-group">
      <%= form.label :user_id %>
      <%= form.select :user_id, @users.collect { |c| [ c.name, c.id ] }, { include_blank: "Please select a user" } %>
      </div>

      <div class="field form-group">
        <%= form.label :attachment %>
        <%= form.file_field :attachment, id: :assignment_attachment %>
      </div>

      <div class="btn btn-primary">
        <%= form.submit %>
      </div>
    </div>
  </div>  
</div>



<% end %>
