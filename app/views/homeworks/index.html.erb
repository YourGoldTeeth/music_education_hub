      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-pencil-square"></i> Homework
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              
              <thead>
                <tr>
                  <th>ID</th>
                  <th>User</th>
                  <th>Download Homework</th>
                  <th>Download Assignment</th>
                  <!-- <th colspan="3"></th> -->
                </tr>
              </thead>

              <tbody>
                <% @homeworks.each do |homework| %>
                  <tr>
                    <td><%= homework.id %></td>
                    <td><%= homework.user.name %></td>

                    <td><%= link_to homework.name, homework.attachment_url %></td>
                    <td><%= link_to homework.assignment.title, homework.assignment.attachment_url %></td>
                    <!-- <td><%#= link_to 'Show', homework %></td> -->
                    <!-- <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
                    <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>   
        </div>  
      </div>  

